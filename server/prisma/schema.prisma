datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

model User {
  id        Int    @id @default(autoincrement())
  cognitoId String
  firstName String
  lastName  String
  email     String
  bets      Bet[]
}

model Bet {
  id     Int     @id @default(autoincrement())
  amount Int
  win    Boolean
  user   User    @relation(fields: [userId], references: [id])
  userId Int
}
